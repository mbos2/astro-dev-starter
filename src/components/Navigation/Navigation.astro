---
import ThemeToggler from '../base/buttons/ThemeToggler';
import NavigationToggler from '../base/buttons/NavigationToggler';
import Link from '../base/links/Link';
import GithubIcon from '../icons/GithubIcon/GithubIcon';
import FacebookIcon from '../icons/FacebookIcon/FacebookIcon';
import TwitterIcon from '../icons/TwitterIcon/TwitterIcon';
import LinkedinIcon from '../icons/LinkedinIcon/LinkedinIcon';
---

<nav>
  <div class="section1">
    <div class="-wrapper">
      <Link className="link title" href="#">DEVSTARTER</Link>
      <div class="social-icons-mobile">
        <Link href="#" className="flexed">
          <GithubIcon size={40} />
        </Link>
        <Link href="#" className="flexed">
          <TwitterIcon size={40} />
        </Link>
        <Link href="#" className="flexed">
          <LinkedinIcon size={40} />
        </Link>
        <Link href="#" className="flexed">
          <FacebookIcon size={40} />
        </Link>
      </div>
    </div>
    <div class="menu-box" onclick="NavToggler()">
      <span>MENU</span>
      <NavigationToggler client:load />
    </div>
  </div>
  <div class="section2">
    <div class="social-icons">
      <Link href="#" className="flexed">
        <GithubIcon size={40} />
      </Link>
      <Link href="#" className="flexed">
        <TwitterIcon size={40} />
      </Link>
      <Link href="#" className="flexed">
        <LinkedinIcon size={40} />
      </Link>
      <Link href="#" className="flexed">
        <FacebookIcon size={40} />
      </Link>
    </div>
  </div>
</nav>
<nav class="links-wrapper">
  <div class="triangle-bottomleft"></div>
  <div class="links">
    <Link href="#" className="link">About</Link>
    <Link href="#" className="link">Portfolio</Link>
    <Link href="#" className="link">Contact</Link>
    <Link href="#" className="link">BLOG</Link>
  </div>
  <div class="triangle-bottomright"></div>
</nav>

<script is:inline>
  const NavToggler = () => {
    const toggler = document.getElementById('navigation-toggler');
    const links = document.querySelector('.links-wrapper');
    toggler.classList.toggle('change');
    links.classList.toggle('nav-display');
  };
</script>

<style lang="scss">
  @use '../../styles/layout/layout.scss' as layout;

  .social-icons-mobile {
    display: none;
    @include layout.screen('md') {
      display: flex;
      gap: 20px;
      margin-top: 10px;
    }
  }

  .nav-display {
    bottom: 0 !important;
  }

  .flexed {
    width: 3vw;
    height: 3vw;
    border-radius: 50%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    transition: var(--transition);

    &:hover {
      animation: ripple 0.8s linear infinite;
    }

    @include layout.screen('lg') {
      flex: 40%;
    }

    @include layout.screen('md') {
      width: 4vw;
      height: 4vw;
    }
  }
  nav {
    width: 100%;
    height: 100%;
    margin: auto;
    display: flex;
    align-items: center;

    @include layout.screen('sm') {
      width: auto;
    }

    > .section1 {
      width: 80%;
      height: 100%;
      padding-left: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-right: 2px solid var(--primary-color);
      @include layout.screen('md') {
        width: 100%;
        border-right: none;
        padding-left: none;

        .-wrapper {
          display: flex;
          flex-direction: column;
          justify-content: center;
          height: 100%;
        }
      }

      > .menu-box {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 30px;
        height: 100%;
        padding: 0px 60px;
        background: var(--secondary-color);
        background: linear-gradient(
            to right,
            var(--secondary-color) 50%,
            var(--primary-color) 50%
          )
          left;
        background-size: 200%;
        transition: 0.2s ease-out;
        cursor: pointer;

        &:hover {
          background-position: right;
        }

        > span {
          font-size: x-large;
        }
      }
    }

    > .section2 {
      width: 20%;
      height: 100%;
      padding: 5px;
      display: flex;
      align-items: center;

      > .social-icons {
        width: 100%;
        height: 100%;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
        align-items: center;
        gap: 15px;
      }

      @include layout.screen('lg') {
        padding: 25px;
      }

      @include layout.screen('md') {
        width: 0;
        display: none;
      }
    }

    .link {
      color: var(--primary-color);
      &:hover {
        color: var(--secondary-color);
      }

      &.title {
        font-size: 1.5rem;
      }
    }
    .toggler {
      display: flex;
      align-items: center;
    }
  }
  .active {
    background: linear-gradient(
        to right,
        var(--secondary-color) 50%,
        var(--primary-color) 50%
      )
      left !important;
    background-size: 200% !important;
    background-position: right !important;
  }

  .links-wrapper {
    position: relative;
    bottom: 190px;
    height: 60px;
    width: 80%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    background-color: var(--bg-color-lighter);
    border: 1px solid var(--primary-color);
    transition: 0.2s;
    .links {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 20px;
    }

    .link {
      color: var(--primary-color);
    }

    @include layout.screen('sm') {
      width: 100%;
    }
  }

  @keyframes ripple {
    0% {
      box-shadow: 0 0 0 0.05rem rgba(255, 255, 255, 0.2);
    }
    100% {
      box-shadow: 0 0 0 1rem rgba(255, 255, 255, 0);
    }
  }
</style>
